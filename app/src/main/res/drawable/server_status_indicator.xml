<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Círculo externo pulsante -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4000D9FF" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
    <!-- Círculo médio -->
    <item
        android:top="3dp"
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#8000D9FF" />
        </shape>
    </item>
    <!-- Círculo interno neon -->
    <item
        android:top="6dp"
        android:left="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="#FF00D9FF" />
        </shape>
    </item>
</layer-list>

