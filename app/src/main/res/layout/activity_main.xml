<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MRIT Server"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servidor HTTP para controle Tuya"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <!-- Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/siteNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site: -"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servidor: Parado"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E53935" />
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Iniciar Servidor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Parar Servidor"
        android:textSize="16sp"
        android:backgroundTint="#E53935"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/configButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Configurar Site"
        android:textSize="16sp"
        android:backgroundTint="#2196F3" />

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_gravity="center"
        android:layout_marginTop="auto"
        android:layout_marginBottom="16dp" />

</LinearLayout>

